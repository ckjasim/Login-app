<%- include('../layout/header.ejs')  -%>
<div class="text-center center-div mt-5" id="login">
    <div class="container w-25 border py-5 mt-5">
<h1>Edit User</h1>
<form action="" method="post" >
    <br></br>
    <input type="text" name="name" placeholder="Name" value="<%= user.name %>" required>
    <br></br>
    <input type="email" name="email" placeholder="Email" value="<%= user.email%>" required>
    <br></br>
    <input type="tel" name="mobile" placeholder="Mobile" value="<%= user.mobile%> " required>
    <br></br>
    <input type="hidden"  value="<%= user._id %> " name="id">
    <br></br>
    <button value="Login">Update user</button>
    

</form>
<% if ( typeof messages !== 'undefined'){%>
    <p style="color: rgb(21, 190, 21);"><%= messages %></p>
    
    <%}%>
<form action="/admin">
    <button>Go Dashboard</button>
</form>
